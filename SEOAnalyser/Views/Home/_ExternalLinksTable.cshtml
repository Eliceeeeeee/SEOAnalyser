@using Kendo.Mvc.UI
@model IEnumerable<SEOAnalyser.Web.Models.ExternalLinksViewModel>
@if (Model != null)
{
	@(Html.Kendo().Grid(Model)
			.Name("ExternalLinksTable")
			.Columns(columns =>
			{
				columns.Bound(x => x.ExternalLink)
					.Sortable(true)
					.Title("External Link")
					.Width(240);
				columns.Bound(x => x.NoOfExternalLinks)
					.Sortable(true)
					.Title("No Of External Link In Page")
					.Width(50);
			})
			.Resizable(resize => resize.Columns(true))
			.DataSource(datasource => datasource.Server())
			.Sortable()
	)
}